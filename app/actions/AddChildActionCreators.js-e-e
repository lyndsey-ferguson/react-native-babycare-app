import {
  ACTION_SET_DISPLAY,
  ACTION_ADD_CHILD,
  ACTION_CHANGE_NAME,
  ACTION_CHANGE_GENDER
} from './AddChildActions'

export const SetDisplay = (visible, allowCancel = false) => ({
  type: ACTION_SET_DISPLAY,
  visible,
  allowCancel
});

export const AddChild = (child) => ({
  type: ACTION_ADD_CHILD,
  child
});

export const ChangeName = (name) => ({
  type: ACTION_CHANGE_NAME,
  name
});

export const ChangeGender = (gender) => ({
  type: ACTION_CHANGE_GENDER,
  gender
});
